{
  "name": "api-scaffolding",
  "version": "0.1.1",
  "description": "Generate API functions with types using schema",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "api-scaffolding-types": "src/generate.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --minify",
    "postbuild": "tsc --emitDeclarationOnly",
    "test": "jest",
    "example": "node src/generate.js --input=example/schema.ts --output=example/types.ts --name=API",
    "example:watch": "node src/generate.js --input=example/schema.ts --output=example/types.ts --watch --name=API"
  },
  "author": "Sokolov Yevhenii",
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/node": "^18.7.14",
    "axios-mock-adapter": "^1.21.2",
    "esbuild": "^0.15.9",
    "jest": "^29.1.2",
    "prettier": "2.7.1",
    "typescript": "^4.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sokoloveugene/api-scaffolding"
  }
}
