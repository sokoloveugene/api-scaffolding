{
  "name": "api-scaffolding",
  "version": "0.0.6",
  "description": "Generate API functions with types using schema",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "api-scaffolding-types": "dist/generate.js"
  },
  "scripts": {
    "build:lib": "esbuild src/index.ts --bundle --minify --outdir=dist",
    "build:generator": "esbuild src/generate.ts --bundle --minify --platform=node --outdir=dist",
    "build": "npm run build:lib && npm run build:generator",
    "postbuild": "tsc --emitDeclarationOnly"
  },
  "author": "Sokolov Yevhenii",
  "devDependencies": {
    "@types/node": "^18.7.14",
    "esbuild": "^0.15.9",
    "prettier": "2.7.1",
    "typescript": "^4.8.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sokoloveugene/api-scaffolding"
  }
}
